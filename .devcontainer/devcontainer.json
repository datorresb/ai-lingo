{
  "name": "Dev Playground",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "..",
    "args": {}
  },
  // Load optional environment variables (e.g., GitHub credentials) if user creates .devcontainer/.env
  "runArgs": [
    "--env-file",
    ".devcontainer/.env"
  ],
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    }
  },
  "remoteEnv": {
    "PYTHONPATH": "${containerWorkspaceFolder}/src:${containerWorkspaceFolder}"
  },
  // Use 'postCreateCommand' to run commands after the container is created.
  // Ex: "postCreateCommand": "pip install --user -r requirements.txt",
  "initializeCommand": "touch .devcontainer/.env",
  "onCreateCommand": "",
  "postCreateCommand": "bash .devcontainer/postCreate.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "bierner.markdown-mermaid"
      ],
      "settings": {
        "editor.formatOnSave": true, // Format the code on save
        // Rainbow Brackets
        "editor.bracketPairColorization.enabled": true,
        "editor.guides.bracketPairs": "active", // or "true"
        // Breakpoints everywhere
        "debug.allowBreakpointsEverywhere": true
      }
    }
  }
  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root"
}